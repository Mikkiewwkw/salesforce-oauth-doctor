{
  "manifest_version": 3,
  "name": "OAuth Doctor - Salesforce OAuth Troubleshooter",
  "version": "1.0.0",
  "description": "Analyze OAuth scopes and diagnose authorization errors for Salesforce OAuth flows",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://login.salesforce.com/*",
    "https://test.salesforce.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://login.salesforce.com/*",
        "https://test.salesforce.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

